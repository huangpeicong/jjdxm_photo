<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <Button
        android:id="@+id/btn_CropFromGallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="从相册选择照片进行裁剪"/>

    <Button
        android:id="@+id/btn_Original"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="从相册获取原生的图片"/>

    <Button
        android:id="@+id/btn_CropFromTake"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="从相机拍取照片进行裁剪"/>

    <Button
        android:id="@+id/btn_TakeOriginal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="从相机拍取照片不裁剪"/>

    <ImageView
        android:id="@+id/iv_imgShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:scaleType="fitCenter"/>

</LinearLayout>
